@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
	@apply h-full overflow-hidden;
}

a {
	text-decoration: underline !important;
}

input {
	@apply input;
}

button,
input[type='submit'] {
	@apply btn cursor-pointer;
}

svg {
	@apply mx-2;
}

@layer components {
	.card-modal {
		@apply card p-4 w-modal shadow-xl space-y-4;
	}
}